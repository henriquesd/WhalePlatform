@page "/products/low-stock"
@rendermode InteractiveWebAssembly
@using WP.Web.Client.Models
@using WP.Web.Client.Services
@inject ICatalogService CatalogService
@inject NavigationManager Navigation

<PageTitle>Low Stock Products</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-exclamation-triangle text-warning"></i> Low Stock Products</h2>
        <div>
            <label>Threshold:</label>
            <input type="number" class="form-control d-inline-block w-auto ms-2" @bind="threshold" @bind:event="oninput" min="1" />
            <button class="btn btn-primary ms-2" @onclick="LoadProducts">Refresh</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border"></div>
        </div>
    }
    else if (products == null || !products.Any())
    {
        <div class="alert alert-info">No low stock products found</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Current Stock</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products.OrderBy(p => p.StockQuantity))
                    {
                        <tr class="@(product.StockQuantity == 0 ? "table-danger" : product.StockQuantity < 5 ? "table-warning" : "")">
                            <td>
                                <strong>@product.Name</strong><br/>
                                <small class="text-muted">@product.Description</small>
                            </td>
                            <td>
                                <span class="badge @(product.StockQuantity == 0 ? "bg-danger" : "bg-warning")">
                                    @product.StockQuantity units
                                </span>
                            </td>
                            <td>$@product.Value.ToString("F2")</td>
                            <td>
                                <span class="badge @(product.Active ? "bg-success" : "bg-secondary")">
                                    @(product.Active ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => ManageStock(product.Id)">
                                    <i class="bi bi-plus-circle"></i> Add Stock
                                </button>
                                <button class="btn btn-sm btn-info" @onclick="() => ViewProduct(product.Id)">
                                    <i class="bi bi-eye"></i> View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<ProductDto>? products;
    private bool isLoading = true;
    private int threshold = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        products = await CatalogService.GetLowStockProductsAsync(threshold);
        isLoading = false;
    }

    private void ManageStock(Guid id)
    {
        Navigation.NavigateTo($"/products/manage-stock/{id}");
    }

    private void ViewProduct(Guid id)
    {
        Navigation.NavigateTo($"/products/{id}");
    }
}
