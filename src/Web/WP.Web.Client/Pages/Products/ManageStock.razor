@page "/products/manage-stock/{id:guid}"
@rendermode InteractiveWebAssembly
@using WP.Web.Client.Models
@using WP.Web.Client.Services
@inject ICatalogService CatalogService
@inject NavigationManager Navigation

<PageTitle>Manage Stock</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Manage Stock</h3>
                </div>
                <div class="card-body">
                    @if (product != null)
                    {
                        <div class="mb-4">
                            <h5>@product.Name</h5>
                            <p class="text-muted">@product.Description</p>
                            <div class="alert alert-info">
                                <strong>Current Stock:</strong> @product.StockQuantity units
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success">@successMessage</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="bi bi-plus-circle text-success"></i> Add Stock</h6>
                                        <div class="input-group mb-3">
                                            <input type="number" class="form-control" @bind="addQuantity" min="1" placeholder="Quantity to add" />
                                            <button class="btn btn-success" @onclick="AddStock" disabled="@isProcessing">
                                                @if (isProcessing)
                                                {
                                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                                }
                                                Add
                                            </button>
                                        </div>
                                        <small class="text-muted">New stock: @(product.StockQuantity + addQuantity)</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="bi bi-dash-circle text-danger"></i> Deduct Stock</h6>
                                        <div class="input-group mb-3">
                                            <input type="number" class="form-control" @bind="deductQuantity" min="1" max="@product.StockQuantity" placeholder="Quantity to deduct" />
                                            <button class="btn btn-danger" @onclick="DeductStock" disabled="@isProcessing">
                                                @if (isProcessing)
                                                {
                                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                                }
                                                Deduct
                                            </button>
                                        </div>
                                        <small class="text-muted">New stock: @(Math.Max(0, product.StockQuantity - deductQuantity))</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button class="btn btn-secondary" @onclick="GoBack">
                                <i class="bi bi-arrow-left"></i> Back
                            </button>
                        </div>
                    }
                    else if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border"></div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">Product not found</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private ProductDto? product;
    private bool isLoading = true;
    private bool isProcessing = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private int addQuantity = 1;
    private int deductQuantity = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadProduct();
    }

    private async Task LoadProduct()
    {
        isLoading = true;
        product = await CatalogService.GetProductByIdAsync(Id);
        isLoading = false;
    }

    private async Task AddStock()
    {
        if (addQuantity <= 0)
        {
            errorMessage = "Quantity must be greater than 0";
            return;
        }

        isProcessing = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var result = await CatalogService.UpdateStockAsync(Id, product!.StockQuantity + addQuantity);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadProduct();
            addQuantity = 1;
        }
        else
        {
            errorMessage = result.Message;
        }

        isProcessing = false;
    }

    private async Task DeductStock()
    {
        if (deductQuantity <= 0 || deductQuantity > product!.StockQuantity)
        {
            errorMessage = "Invalid quantity";
            return;
        }

        isProcessing = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        var result = await CatalogService.DeductStockAsync(Id, deductQuantity);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadProduct();
            deductQuantity = 1;
        }
        else
        {
            errorMessage = result.Message;
        }

        isProcessing = false;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/products");
    }
}
