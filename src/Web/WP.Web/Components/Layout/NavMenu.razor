<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">WhalePlatform</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <hr class="my-2" />
        
        <div class="nav-item px-3">
            <button class="nav-link w-100 text-start border-0 bg-transparent d-flex justify-content-between align-items-center" 
                    type="button"
                    @onclick="ToggleProductsMenu"
                    @onclick:stopPropagation="true">
                <span>
                    <span class="bi bi-box-seam" aria-hidden="true"></span> Products
                </span>
                <span class="bi @(productsMenuExpanded ? "bi-chevron-down" : "bi-chevron-right")"></span>
            </button>
        </div>

        @if (productsMenuExpanded)
        {
            <div class="nav-submenu">
                <div class="nav-item px-3 ps-5">
                    <NavLink class="nav-link" href="products">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> All Products
                    </NavLink>
                </div>

                <div class="nav-item px-3 ps-5">
                    <NavLink class="nav-link" href="products/active">
                        <span class="bi bi-check-circle" aria-hidden="true"></span> Active Products
                    </NavLink>
                </div>

                <div class="nav-item px-3 ps-5">
                    <NavLink class="nav-link" href="products/low-stock">
                        <span class="bi bi-exclamation-triangle" aria-hidden="true"></span> Low Stock
                    </NavLink>
                </div>

                <div class="nav-item px-3 ps-5">
                    <NavLink class="nav-link" href="products/form">
                        <span class="bi bi-plus-circle" aria-hidden="true"></span> New Product
                    </NavLink>
                </div>
            </div>
        }

        <hr class="my-2" />
        <div class="px-3 text-muted small">ACCOUNT</div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="register">
                <span class="bi bi-person-plus" aria-hidden="true"></span> Register
            </NavLink>
        </div>
    </nav>
</div>

<style>
    .nav-submenu {
        background-color: rgba(0, 0, 0, 0.2);
        border-left: 3px solid var(--bs-primary);
        margin-left: 1rem;
        animation: slideDown 0.3s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            max-height: 0;
        }
        to {
            opacity: 1;
            max-height: 500px;
        }
    }

    .nav-link {
        color: #d7d7d7;
        border-radius: 4px;
        padding: 0.5rem 1rem;
        transition: all 0.2s;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        padding-left: 1.2rem;
    }

    .nav-link:focus,
    .nav-link:active,
    .nav-link.active {
        background-color: rgba(255,255,255,0.37);
        color: white;
    }

    button.nav-link {
        cursor: pointer;
    }

    button.nav-link:focus {
        outline: none;
        box-shadow: none;
    }

    button.nav-link:hover {
        padding-left: 1rem !important;
    }

    .bi {
        margin-right: 0.5rem;
    }

    hr {
        border-color: rgba(255, 255, 255, 0.2);
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.5) !important;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
</style>

@code {
    private bool productsMenuExpanded = true;

    private void ToggleProductsMenu()
    {
        productsMenuExpanded = !productsMenuExpanded;
    }
}





